- page_articles.each do |article|
  .item.article
    .info
      .date
        %h2= article.date.strftime('%b %e')
      .icon.icon-book.yellow
      .tags
        - article.tags.each do |tag|
          = "##{tag}"
    .content
      %h2
        = link_to article.title, article
      %p= article.summary
